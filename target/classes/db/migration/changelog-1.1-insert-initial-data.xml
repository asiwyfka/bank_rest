<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">

    <changeSet id="5" author="avdey">
        <!-- Добавим роли -->
        <insert tableName="roles">
            <column name="id" valueNumeric="1"/>
            <column name="name" value="ROLE_USER"/>
        </insert>
        <insert tableName="roles">
            <column name="id" valueNumeric="2"/>
            <column name="name" value="ROLE_ADMIN"/>
        </insert>

        <!-- Добавим тестового пользователя -->
        <insert tableName="users">
            <column name="id" valueNumeric="1"/>
            <column name="username" value="test_user"/>
            <!-- В реальном проекте пароль должен быть хеширован -->
            <column name="password" value="password123"/>
            <column name="email" value="test_user@example.com"/>
            <column name="created_at" valueDate="2025-10-14T00:00:00"/>
        </insert>

        <!-- Связь user -> role -->
        <insert tableName="user_roles">
            <column name="user_id" valueNumeric="1"/>
            <column name="role_id" valueNumeric="1"/>
        </insert>
    </changeSet>

</databaseChangeLog>
